# Server
PORT=3000
NODE_ENV=production

# Database
DATABASE_URL=postgresql://user:password@host:5432/database

# Redis
REDIS_URL=redis://host:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=30d

# CORS
CORS_ORIGIN=https://your-frontend-domain.com

# Anthropic (Claude AI assistant — console.anthropic.com → API Keys)
ANTHROPIC_API_KEY=

# OpenAI / Google APIs
OPENAI_API_KEY=
GOOGLE_APPLICATION_CREDENTIALS=

# Twilio SMS (leave blank to use console.log fallback in dev)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# Paymob (for payments)
PAYMOB_API_KEY=your-paymob-api-key
PAYMOB_INTEGRATION_ID=12345
PAYMOB_IFRAME_ID=your-iframe-id
PAYMOB_HMAC_SECRET=your-hmac-secret

# Platform settings
PLATFORM_FEE_PERCENT=4
MIN_WITHDRAWAL_EGP=100
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=+1XXXXXXXXXX
# Base URL used to build hosted image URLs
API_BASE_URL=https://api.kaero.app
# Paymob (Egypt payment gateway — https://developers.paymob.com)
PAYMOB_API_KEY=
PAYMOB_INTEGRATION_ID=
PAYMOB_IFRAME_ID=
PAYMOB_HMAC_SECRET=
# Platform settings
PLATFORM_FEE_PERCENT=4
MIN_WITHDRAWAL_EGP=100
# Admin panel (set a strong secret — used as X-Admin-Key header)
ADMIN_API_KEY=replace_me_with_a_strong_random_secret
